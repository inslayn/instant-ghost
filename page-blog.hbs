{{!< default}}

{{!-- This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. --}}

{{!-- Everything inside the #post tags pulls data from the page --}}
{{#post}}

<div id="headerwrap" class="
    {{#if image}}
    cover" style="background-image: url({{image}})""
    {{else}}
    {{#if @blog.cover}}
    cover" style="background-image: url({{@blog.cover}})""
    {{else}}
    no-cover
    {{/if}}
    {{/if}}"
    >
    <div class="container">
      <div class="row centered">
        <div class="col-lg-6 col-lg-offset-3">
          {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        </div>
      </div>
      <div class="row centered">
        <div class="col-lg-6 col-lg-offset-3">
          <h1>{{title}}</h1>
        </div>
      </div>
    </div>
</div>

<main class="content" role="main">
  <div class="container">
    <div class="row centered mt mb">
      {{content}}
    </div>
    <div id="content" class="blog row mt">

    </div>
    <hr />
    <!-- <nav class="pagination" role="navigation"> -->
      <div class="row centered mt mb">
        <div class="col-lg-4">
          <a id="prev-posts" class="newer-posts">&larr; Newer Posts</a>
        </div>
        <div class="col-lg-4">
          <span id="page-number" class="page-number"></span>
        </div>
        <div class="col-lg-4">
          <a id="next-posts" class="older-posts">Older Posts &rarr;</a>
        </div>
      </div>
    <!-- </nav> -->
  </div>
</main>

{{/post}}
